{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "jupyter": {
      "type": "local",
      "command": [
        "uvx",
        "jupyter-mcp-server@latest"
      ],
      "environment": {
        "JUPYTER_URL": "http://localhost:8888",
        "JUPYTER_TOKEN": "OPENCODE",
        "ALLOW_IMG_OUTPUT": "true"
      }
    },
    "pdf-reader": {
      "type": "local",
      "command": ["npx", "@sylphx/pdf-reader-mcp"]
    },
    "chrome-devtools": {
      "type": "local",
      "command": ["npx", "-y", "chrome-devtools-mcp@latest", "--autoConnect"]
    }
  }
}